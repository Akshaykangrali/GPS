<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginBottom="55dp"
        android:layout_marginTop="127dp"
        android:background="@color/fui_transparent"
        android:fontFamily="monospace"
        android:text="hit_the_button_to_save_your_location"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/bb"
        app:layout_constraintBottom_toTopOf="@+id/my_loc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/my_loc"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginEnd="97dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/layout_back"
        android:gravity="center"
        android:text="save_my_location"
        android:textColor="@color/bb"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/loc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="92dp"
        android:layout_marginTop="147dp"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_loc" />


    <TextView
        android:id="@+id/lng"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="51dp"
        android:layout_marginTop="22dp"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loc" />

</android.support.constraint.ConstraintLayout>